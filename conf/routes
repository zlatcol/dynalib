# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Startsidan
GET     /    	                    controllers.DynaLib.index
GET		/library					controllers.DynaLib.listAllBooks
GET		/available					controllers.DynaLib.listAvailableBooks
GET		/borrowed					controllers.DynaLib.listBorrowedBooks
GET		/myBooks					controllers.DynaLib.listMyBooks
GET		/search						controllers.DynaLib.search
GET		/library/:id				controllers.DynaLib.book(id: Int)
GET		/user/:id					controllers.DynaLib.user(id: Int)
GET		/addBookForm				controllers.DynaLib.addBook
GET		/addAuthorForm				controllers.DynaLib.addAuthor

GET     /login 	                    controllers.Auth.login
GET 	/authed						controllers.Auth.openIDCallback
GET 	/logout						controllers.Auth.logout


POST	/doAddBook					controllers.RequestHandler.handleAddBookRequest
POST	/doAddAuthor				controllers.RequestHandler.handleAddAuthorRequest
POST	/doBorrow					controllers.RequestHandler.handleBorrowBookRequest
POST	/doReturn					controllers.RequestHandler.handleReturnBookRequest
POST	/doSearchByAuthor			controllers.RequestHandler.handleSearchByAuthor
POST 	/dosearchByCategory			controllers.RequestHandler.handleSearchByCategory
POST	/doEditBook					controllers.RequestHandler.handleEditBookRequest
POST	/doEditUser					controllers.RequestHandler.handleSaveUserRequest
POST	/doPerfomEdit				controllers.RequestHandler.handlePerfomEditRequest
POST 	/doLogin					controllers.Auth.loginPost



# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
